{
  "name": "dart-scorer",
  "version": "0.4.0",
  "description": "Professional dart scoring application with TV scoreboard and mobile input",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "vite",
    "dev:server": "nodemon server/index.js",
    "build": "node ./node_modules/vite/bin/vite.js build",
    "preview": "vite preview",
    "start": "NODE_ENV=production node server/index.js",
    "start:windows": "set NODE_ENV=production && node server/index.js",
    "start:prod": "NODE_ENV=production node server/index.js",
    "build:prod": "npm run build && npm run start"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.4",
    "cors": "^2.8.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io-client": "^4.7.4",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}